<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andrew.deathwatch20">

    <application
        android:name="com.example.andrew.deathwatch20.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BasicSkillsActivity"
            android:screenOrientation="portrait"
            android:label="Basic Skills"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".EditSkillActivity"
            android:screenOrientation="portrait"
            android:label="Edit"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".WeaponActivity"
            android:screenOrientation="portrait"
            android:label="Weapons"/>
    </application>

</manifest>