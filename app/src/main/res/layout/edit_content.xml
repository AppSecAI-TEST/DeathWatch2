<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ballistic Skill"
        android:id="@+id/titleView"
        android:textSize="60sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="48"
            android:id="@+id/numView"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false"
            android:layout_toStartOf="@+id/bPlus"
            android:textSize="220dp"
            android:textAlignment="center"
            android:layout_weight="75"
            android:gravity="center_vertical"
            android:textColor="#ffffff" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center_vertical|right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/bPlus"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="false"
                android:textSize="40dp"
                android:paddingBottom="25dp"
                android:textAlignment="center"
                android:paddingTop="25dp"
                android:textColor="#ffffff"
                android:backgroundTint="#737373" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/bSubtract"
                android:layout_alignStart="@+id/bPlus"
                android:layout_alignParentBottom="false"
                android:textSize="40dp"
                android:layout_alignParentLeft="false"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:textColor="#ffffff"
                android:backgroundTint="#737373" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lowest - 31 \t\t Highest - 99"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/bSave"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:backgroundTint="#737373" />

</LinearLayout>